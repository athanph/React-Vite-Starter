root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

trim_traiing_whitespace = true

# Indentation
indent_style = space
indent_size = 2

[*.{php,html,css,scss,sass}]
indent_style = tab
indent_size = 4
